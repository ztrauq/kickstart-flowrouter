{
  "public": {
    "blog": {
      "name": "hyperReactivity",
      "description": "a blog about reactive web development with MeteorJS",
      "prettify": {
        "syntax-highlighting": true,
        "element-classes": [
          {
            "locator": "img",
            "classes": ["pure-img"]
          },
          {
            "locator": "button",
            "classes": ["ui button"]
          }
        ]
      },
      "sortBy": {"date": -1},
      "baseUrl": "http://localhost:3000",
      "blogPath": "/",
      "archivePath": "/archive",
      "useUniqueBlogPostsPath": true,
      "defaultLocale": "en",
      "emailOnPublish": false
    },
    "accounts" : {
      "service" : {
        "name" : "hyperReactivity",
        "email": {
          "from": "<no-reply@hyperReactivity.com>"
        }
      }
    }
  }
}
